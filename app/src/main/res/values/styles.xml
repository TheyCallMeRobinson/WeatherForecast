<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/darkBlue</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="Text.MainTextView">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:shadowColor">@color/darkBlue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">100dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">28sp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="Text.MainEditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white_pale</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">80dp</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="Text.ForecastTextView">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:shadowColor">@color/darkBlue</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">50dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Text.ForecastDetailsTextView">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:shadowColor">@color/darkBlue</item>
        <item name="android:background">@color/white_pale</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ems">8</item>
    </style>

    <style name="Text.ForecastDetailsTextViewValue">
        <item name="android:textColor">@color/sky_blue</item>
        <item name="android:shadowColor">@color/darkBlue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button">
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>
</resources>